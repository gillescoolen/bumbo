@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Persoonlijke informatie";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Je account bevat persoonlijke informatie die je aan ons hebt verstrekt. Deze pagina biedt je de mogelijkheid om deze informatie te downloaden.</p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Downloaden</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}