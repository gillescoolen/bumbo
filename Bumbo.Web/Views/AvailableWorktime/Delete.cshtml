@model Bumbo.Data.Models.AvailableWorktime

@{
    ViewData["Title"] = "Verwijder";
}

<h2>Weet je zeker dat je deze beschikbaarheidsdatum wilt verwijderen?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Starttijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class="col-sm-2">
            Eindtijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Finish)
        </dd>

        @if (Model.SchoolHoursWorked != null)
        {
            <dt class="col-sm-2">
                Gewerkte schooluren
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SchoolHoursWorked)
            </dd>
        }

        <dt class="col-sm-2">
            Gebruiker
        </dt>
        <dd class="col-sm-10">
            @Model.User.GetFullName()
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.ActionLink("Verwijder", "DeleteConfirmed","AvailableWorktime", new { UserId = Model.UserId, WorkDate = Model.WorkDate.ToString() })
    </form>

    <a asp-action="Index">Terug naar overzicht</a>
</div>
