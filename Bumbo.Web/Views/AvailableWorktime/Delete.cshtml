@model Bumbo.Data.Models.AvailableWorktime

@{
    ViewData["Title"] = "Verwijder";
}

<h1>Delete</h1>

<h3>Wil je deze verwijderen?</h3>
<div>
    <h4>Beschikbaarheid</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Starttijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class="col-sm-2">
            Eindtijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Finish)
        </dd>

        @if (Model.SchoolHoursWorked != null)
        {
            <dt class="col-sm-2">
                Gewerkte schooluren
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SchoolHoursWorked)
            </dd>
        }

        <dt class="col-sm-2">
            Gebruiker
        </dt>
        <dd class="col-sm-10">
            @Model.User.GetFullName()
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.ActionLink("Delete", "DeleteConfirmed", new { UserId = Model.UserId, WorkDate = Model.WorkDate.ToString() })
        | <a asp-action="Index">Back to List</a>
    </form>
</div>
