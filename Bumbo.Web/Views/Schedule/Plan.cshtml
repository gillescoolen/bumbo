@model Bumbo.Web.Models.PlanViewModel

@{
    ViewData["Title"] = "Inplannen";
}

<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h4>Inplannen</h4>
        <form style="width: 256px" asp-action="Plan" class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text" asp-for="@Model.Date">Week:</label>
            </div>
            <input onchange="this.form.submit()" type="date" asp-for="@Model.Date" class="form-control" />
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12">
        <ul class="list-group">
        @foreach (var user in Model.Users)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @user.GetFullName() 
                <form asp-action="Create" method="post">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <input type="hidden" name="date" value="@Model.Date" />
                    <button type="submit" class="btn pull-right btn-primary">Inplannen</button>
                </form>
            </li>
        }
        </ul>   
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}