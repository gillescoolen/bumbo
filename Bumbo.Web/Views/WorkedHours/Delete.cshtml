@model Bumbo.Data.Models.ActualTimeWorked

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je deze gewerkte uren wilt verwijderen?</h3>
<div>
    <h4>Gewerkte uren</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Starttijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class="col-sm-2">
            Eindtijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Finish)
        </dd>
        <dt class="col-sm-2">
            Datum   
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkDate)
        </dd>
        <dt class="col-sm-2">
            Aanwezig/Ziek
        </dt>
        @if (Model.Sickness == 0)
        {
            <dd class="col-sm-10" style="color:green">Aanwezig</dd>
        }
        else
        {
            <dd class="col-sm-10" style="color:red">Ziek</dd>
        }
        <dt class="col-sm-2">
            Gebruiker
        </dt>
        <dd class="col-sm-10">
            @Model.User.GetFullName()
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" value=@Model.UserId name="UserId" />
        <input type="hidden" value=@Model.WorkDate.ToString() name="WorkDate" />
        <input type="submit" value="Verwijder" asp-action="DeleteConfirmed" class="btn btn-primary"/>
    </form>

    <div>
        <a asp-area="" asp-controller="WorkedHours" asp-action="Standard">Terug naar het overzicht</a>
    </div>
</div>
